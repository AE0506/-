/* message/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.action-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.clear-btn {
  color: #1890ff;
  font-size: 28rpx;
}

.message-list {
  padding: 20rpx;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.message-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.message-content {
  flex: 1;
}

.message-title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.title-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 10rpx;
}

.unread-badge {
  width: 16rpx;
  height: 16rpx;
  background-color: #f5222d;
  border-radius: 50%;
}

.message-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-time {
  font-size: 24rpx;
  color: #999999;
}

.message-arrow {
  font-size: 40rpx;
  color: #cccccc;
  margin-left: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

