/* work-study/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-section {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 50rpx 30rpx;
  text-align: center;
  color: #ffffff;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.job-list {
  padding: 20rpx;
}

.job-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.job-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.job-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.job-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.job-location {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.job-info {
  display: flex;
  flex-direction: column;
}

.job-salary,
.job-hours {
  font-size: 24rpx;
  color: #1890ff;
  margin-bottom: 5rpx;
}

.apply-btn {
  padding: 15rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 26rpx;
}

.apply-btn::after {
  border: none;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

