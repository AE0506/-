/* activity-detail/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.activity-image {
  position: relative;
  width: 100%;
  height: 500rpx;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.emoji-icon {
  font-size: 150rpx;
}

.participants-badge {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.activity-content {
  padding: 30rpx 20rpx;
}

.activity-header {
  margin-bottom: 30rpx;
}

.activity-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.activity-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999999;
}

.info-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.description-section,
.requirements-section,
.benefits-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
}

.tag-item {
  padding: 15rpx 30rpx;
  margin: 10rpx 15rpx 10rpx 0;
  background-color: #e6f7ff;
  border: 2rpx solid #91d5ff;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #1890ff;
}

.benefit-list {
  display: flex;
  flex-direction: column;
}

.benefit-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
}

.benefit-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #52c41a;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 2rpx solid #f0f0f0;
}

.join-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.join-btn.joined {
  background: #cccccc;
}

.join-btn::after {
  border: none;
}

