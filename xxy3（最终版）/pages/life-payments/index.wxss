/* life-payments/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-section {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 50rpx 30rpx;
  text-align: center;
  color: #ffffff;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.payment-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  padding: 40rpx 30rpx;
}

.payment-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
}

.payment-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.payment-icon text {
  font-size: 50rpx;
}

.payment-name {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
}

